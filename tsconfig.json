{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "outDir": "dist",
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": [
    "build-info.json",
    "server.ts",
    "src/**/*",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
