{
  "name": "project-tardis",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "release": "sh scripts/release.sh",
    "create:db": "node scripts/create-db",
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --require tsconfig-paths/register server.ts",
    "lint": "tslint --format verbose --project ./tsconfig.json --config ./tslint.json",
    "prettier": "prettier --write 'src/**/*.ts' ./prettierrc",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.js",
      "**/*.test.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "description": "A Text Adventure Engine",
  "author": "Fernando Doglio",
  "dependencies": {
    "@hapi/joi": "^17.0.2",
    "@types/hapi__joi": "^16.0.6",
    "async": "^2.6.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "csvtojson": "^2.0.10",
    "date-fns": "^1.30.1",
    "debug": "~2.6.9",
    "express": "^4.16.3",
    "express-joi-validation": "^4.0.3",
    "express-promise-router": "^3.0.3",
    "helmet": "^3.20.0",
    "http-errors": "~1.6.2",
    "knex": "^0.20.8",
    "lodash": "^4.17.10",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.21",
    "mongoose": "^5.4.2",
    "morgan": "~1.9.0",
    "nock": "^10.0.6",
    "pg": "^7.7.1",
    "query-string": "^6.1.0",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "require-dir": "^1.2.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/joi": "^13.3.0",
    "@types/knex": "^0.14.14",
    "@types/lodash": "^4.14.110",
    "@types/mocha": "^5.2.3",
    "@types/node": "^12.7.12",
    "@types/request": "^2.47.0",
    "@types/request-promise": "^4.1.42",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/supertest": "^2.0.4",
    "awesome-typescript-loader": "^5.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "ts-node": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.26",
    "tsconfig-paths": "^3.7.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^3.6.3",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.6",
    "webpack-log": "^1.2.0",
    "webpack-node-externals": "^1.7.2"
  }
}
